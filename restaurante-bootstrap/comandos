//instalar less
npm install -g less@2.7.2

//ejecutar less
lessc styles.less styles.css

//instalar sass
npm install --save-dev node-sass@4.7.2
npm run scss

//instalar parallelshell
npm install --save-dev onchange@3.3.0 parallelshell@3.0.2

